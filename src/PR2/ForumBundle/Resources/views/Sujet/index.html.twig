{% extends "PR2ForumBundle::layout.html.twig" %}
 
{% block title %}
  Administration - Sujet -{{ parent() }}
{% endblock %}
 
{% block pr2forum_body %}
	<div class="page-header">
		<h1>Les Sujets <small>Administration</small></h1>
	</div>
	{% for sujet in sujets %}
		<div class="bloc bloc-liste-admin">
			<b>{{ sujet.getIdentifiant() }}</b>
			<a href="{{ path('pr2sujet_voir', {'id': sujet.getId()}) }}" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-search"></span></a>
			<a href="{{ path('pr2sujet_modifier', {'id': sujet.getId()}) }}" class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
			<a href="{{ path('pr2sujet_supprimer', {'id': sujet.getId()}) }}" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
		</div>
	{% endfor %}
	<hr />
	<p>
	    <a href="{{ path('pr2admin_index') }}" class="btn btn-default">
	    	<span class="glyphicon glyphicon-chevron-left"></span>
	    	Retour au Carrefour
	    </a>
  	</p>
{% endblock %}